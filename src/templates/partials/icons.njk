{# SVG 图标库 #}
{# 使用方法: {% include "partials/icons.njk" %} 后调用对应的宏 #}
{# 除了 Invertocat 外, 其他图标来自 Lucide Icons (https://lucide.dev/), 使用 ISC 与 MIT 许可 #}
{# 编辑图标 - pencil #}
{% macro iconEdit(width=16, height=16, className="") %}
    <svg class="icon {{ className }}"
         viewBox="0 0 24 24"
         width="{{ width }}"
         height="{{ height }}"
         aria-hidden="true"
         focusable="false">
        <path d="M21.174 6.812a1 1 0 0 0-3.986-3.987L3.842 16.174a2 2 0 0 0-.5.83l-1.321 4.352a.5.5 0 0 0 .623.622l4.353-1.32a2 2 0 0 0 .83-.497z" />
        <path d="m15 5 4 4" />
    </svg>
{% endmacro %}
{# 复制图标 - copy #}
{% macro iconCopy(width=16, height=16, className="") %}
    <svg class="icon icon-copy {{ className }}"
         viewBox="0 0 24 24"
         width="{{ width }}"
         height="{{ height }}"
         aria-hidden="true"
         focusable="false">
        <rect width="14" height="14" x="8" y="8" rx="2" ry="2" />
        <path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2" />
    </svg>
{% endmacro %}
{# 完成图标 - check #}
{% macro iconCheck(width=16, height=16, className="") %}
    <svg class="icon icon-check {{ className }}"
         viewBox="0 0 24 24"
         width="{{ width }}"
         height="{{ height }}"
         aria-hidden="true"
         focusable="false">
        <path d="M20 6 9 17l-5-5" />
    </svg>
{% endmacro %}
